<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InitialActivity">

    <Button
        android:id="@+id/btnUserInitial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/custom_buttom"
        android:text="@string/txtUser"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.566" />

    <Button
        android:id="@+id/btnAttendantInitial"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_buttom"
        android:text="@string/txtAttendant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnUserInitial"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnUserInitial"
        app:layout_constraintTop_toBottomOf="@+id/btnUserInitial"
        app:layout_constraintVertical_bias="0.245" />

    <Button
        android:id="@+id/button2"
        android:layout_width="550dp"
        android:layout_height="500dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/custom_circle_layout"
        app:layout_constraintBottom_toTopOf="@+id/btnUserInitial"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>